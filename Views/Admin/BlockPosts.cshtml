@model List<CateringReady.Models.catering_post>
@{
    ViewBag.Title = "BlockPosts";
}

<!-- page content -->
<section class="page-content-area search-result-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-3 col-md-2">
                <h3><a href="/Admin/Home" style="border: 3px; border-style: solid; border-color:red;color:red">Admin Home Page</a></h3>
            </div>
            <div class="col-sm-9 col-md-10">
                <div class="col-sm-9 col-md-10">
                    <h1 style="padding-left:14em">Blocked Posts</h1>
                 </div>
                    <ul class="list-results">
                        @foreach (var item in Model)
                        {
                        <li>
                            <div class="col-sm-6 col-md-6">
                                <img src="/assets/images/PostsPictures/@item.image1" style="height:200px;width:450px" alt="">
                            </div>
                            <div class="col-sm-3 col-md-4">
                                <h3><a name="company_name" href="/Search/MoreDetails">@item.company.name</a></h3>
                                <p class="justline-2">@item.one_line_description </p>
                                <div>
                                    <div class="col-md-6">
                                        <p>@item.company.office_location</p>
                                        <p>@item.company.phone1</p>
                                        <p>@item.company.phone2</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>@item.company.email</p>
                                        <p class="hidden"></p>
                                        <p class="hidden"></p>
                                        <p><input value="Details" type="button" class="bottom-right" /></p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <input value="UnBlock" style="color:red" type="button"/>
                                <input value="Email  "  style="color:red" type="button"/>
                                <input value="Remove "  style="color:red" type="button"/>
                            </div>
                        </li>
                        }
                    </ul>
                </div>
        </div>
    </div>
</section><!-- page-content-area -->
